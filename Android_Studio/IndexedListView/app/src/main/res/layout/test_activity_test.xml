<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TestActivity">

    <fr.freud.indexedlistview.view.IndexedListView
        android:id="@+id/indexed_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:side_index_width="20dp"
        custom:side_index_background="@drawable/default_index_item_border"
        custom:side_index_text_size="8sp"
        custom:side_index_text_color="@android:color/secondary_text_dark"
        custom:toast_text_text_size="18sp"
        custom:toast_text_color="@android:color/primary_text_dark"
        />
</RelativeLayout>
