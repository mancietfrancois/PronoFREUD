<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TestActivity">

    <fr.freud.indexedlistview.view.IndexedListView
        android:id="@+id/indexed_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:side_index_width="20dip"
        custom:side_index_background="@drawable/test_border"
        custom:side_index_text_size="12sp"
        custom:side_index_text_color="#7C8386"
        custom:toast_layout_width="100dip"
        custom:toast_layout_height="100dip"
        custom:toast_layout_background="@drawable/test_border_index_toast"
        custom:toast_text_text_size="55sp"
        custom:toast_text_color="#2FA6C9"
        />

</RelativeLayout>
