<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="6dip" >

    <ImageView
        android:id="@+id/feedMessageIcon"
        android:contentDescription="@string/image_logo_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_marginRight="6dip"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/feedMessageTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14dp"
        android:layout_toRightOf="@id/feedMessageIcon"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/feedMessageDescription"
        style="  "
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/feedMessageIcon"
        android:layout_marginTop="6dp"
        android:background="@android:color/background_light"
        android:ellipsize="marquee"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout> 
